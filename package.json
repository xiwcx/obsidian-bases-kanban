{
	"name": "kanban-bases-view",
	"version": "0.1.6",
	"description": "A kanban-style drag-and-drop custom view for Obsidian Bases",
	"main": "main.js",
	"imports": {
		"obsidian": "./tests/mocks/obsidian.ts",
		"sortablejs": "./tests/mocks/sortablejs.js"
	},
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"typecheck": "tsc -noEmit -skipLibCheck",
		"test": "NODE_NO_WARNINGS=1 tsx --tsconfig tsconfig.test.json --test",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix"
	},
	"keywords": [
		"obsidian",
		"obsidian-plugin",
		"kanban",
		"bases",
		"task-management"
	],
	"author": "I. Welch Canavan",
	"license": "MIT",
	"devDependencies": {
		"@types/jsdom": "^21.1.6",
		"@types/node": "^24.0.0",
		"@types/sortablejs": "^1.15.9",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.19.8",
		"eslint": "^9.0.0",
		"eslint-plugin-obsidianmd": "^0.1.8",
		"jsdom": "^24.0.0",
		"obsidian": "^1.5.8",
		"tslib": "2.6.2",
		"tsx": "^4.20.6",
		"typescript": "5.3.3"
	},
	"dependencies": {
		"sortablejs": "^1.15.0"
	}
}
